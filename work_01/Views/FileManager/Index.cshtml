
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col">
        <h1 class="alert alert-info">File Upload Manager</h1>
        <h3 class="text-primary text-center">@ViewBag.msg</h3>
    </div>
</div>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="UploadFile" asp-controller="FileManager" enctype="multipart/form-data" method="post">
            <label>File :</label>
            <input type="file" name="filetoupload" value="" class="form-control"/><br />
            <button type="submit" class="btn btn-primary">Upload File</button>
        </form>
    </div>
</div>

